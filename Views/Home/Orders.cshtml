@model IEnumerable<OrderViewModel>
@{
    ViewData["Title"] = "Список заказов";
}
<h1>@ViewData["Title"]</h1>
<div>
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>№ заказа</th>
                <th>Дата забора груза</th>
                <th>Вес груза</th>
                <th>Адрес отправителя</th>
                <th>Адрес получателя</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.PickUpDate.ToShortDateString()</td>
                    <td>@order.CargoWeight</td>
                    <td>@order.SenderAddress.ToString()</td>
                    <td>@order.RecipientAddress.ToString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (ViewBag.Pagination is PaginationViewModel pagination && pagination.TotalPages > 0)
{
    <partial name="_PaginationPartialView" model="pagination" />
}

